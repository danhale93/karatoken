{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Android",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "sourceMaps": true,
      "outDir": "${workspaceFolder}/.vscode/.react"
    },
    {
      "name": "Debug iOS",
      "type": "reactnative", 
      "request": "launch",
      "platform": "ios",
      "sourceMaps": true,
      "outDir": "${workspaceFolder}/.vscode/.react"
    },
    {
      "name": "Attach to Metro",
      "type": "node",
      "request": "attach",
      "port": 8081,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}